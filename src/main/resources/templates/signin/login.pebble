{% if errorReason %}
<p class="error">
    {{errorReason}}
</p>
{% endif %}

<form method="post" action="/signin">
    <label>
        Username:
        <input name="username" type="text">
    </label><br/>

    <label>
        Password
        <input name="password" type="password">
    </label><br/>

    <input type="submit" value="Login">
</form>