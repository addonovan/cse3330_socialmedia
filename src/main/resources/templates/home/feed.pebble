{% extends "../base" %}

{% block title %}
    {{user.fullName}} | SocialMediaSite
{% endblock %}

{% block content %}
    <form class="post" method="post" action="/post/submit">
        <input type="number" name="wallId" class="hidden" value="{{user.id}}">
        <textarea name="text" placeholder="How's i goin', pardner?"></textarea>
        <input type="submit" value="Send it o'er yonder">
    </form>

    <form class="post" method="post" action="/media/upload" enctype="multipart/form-data">
        <input type="file" name="file"/>
        <input type="submit" value="Show 'em all this 'ere picture"/>
    </form>

    <div id="Overview">
        {% for post in overview %}
            {% include "../post" with {"wall": user} %}
        {% endfor %}
    </div>
{% endblock %}
